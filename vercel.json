{
  "rewrites": [
    { "source": "/r/(.*)", "destination": "/" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "npm run build",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Permissions-Policy",
          "value": "microphone=(self), camera=(self), geolocation=(self)"
        },
        {
          "key": "Feature-Policy",
          "value": "microphone *; camera *; geolocation *"
        }
      ]
    }
  ]
}