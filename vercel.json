{
  "rewrites": [{ "source": "/(.*)", "destination": "/" }],
  "installCommand": "bun install",
  "buildCommand": "bun run build",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Permissions-Policy",
          "value": "microphone=(self \"https://altan.ai\" \"https://www.altan.ai\" \"https://api.altan.ai\")"
        }
      ]
    }
  ]
}