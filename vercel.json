{
  "rewrites": [
    { "source": "/r/(.*)", "destination": "/" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "installCommand": "rm -rf node_modules bun.lockb && bun install --ignore-scripts && bun install esbuild@0.25.9",
  "buildCommand": "bun run build",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Permissions-Policy",
          "value": "microphone=(self), camera=(self), geolocation=(self)"
        },
        {
          "key": "Feature-Policy",
          "value": "microphone *; camera *; geolocation *"
        }
      ]
    }
  ]
}