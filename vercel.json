{
  "rewrites": [
    { "source": "/r/(.*)", "destination": "/" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "installCommand": "bun install",
  "buildCommand": "bun run build",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Permissions-Policy",
          "value": "microphone=*, camera=*, geolocation=*"
        },
        {
          "key": "Feature-Policy",
          "value": "microphone *; camera *; geolocation *"
        }
      ]
    }
  ]
}